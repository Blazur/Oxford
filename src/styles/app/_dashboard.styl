@import 'app/_colors'
@import 'app/_shadows'
body {
  position relative
  overflow hidden
  width 100%
  height 100%
}
.dashboard
  width: 100%;
  height: 100%;
  position: relative;
  -webkit-transform: translateX(0);
  transform: translateX(0);

  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);

  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;

  &.ease
    transition 300ms ease all
    -webkit-transition 300ms ease all

  &.snappy
    -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
    transition all 300ms cubic-bezier(.694, .0482, .335, 1)

  &.linear
    -webkit-transition 300ms linear all
    transition: 300ms linear all
  &.ease-in
    -webkit-transition 300ms ease-in all
    transition: 300ms ease-in all
  &.ease-out
    -webkit-transition 300ms ease-out all
    transition 300ms ease-out all

  &.ease-in-out
    -webkit-transition 300ms ease-out all
    transition 300ms ease-out all

  &.bounce
    -webkit-transition all 300ms cubic-bezier(0.32,1.25,0.375,1.15)
    transition all 300ms cubic-bezier(0.32,1.25,0.375,1.15)

  &.out-of-orbit
    -webkit-transition all 300ms cubic-bezier(1,0,.61,.15)
    transition all 300ms cubic-bezier(1,0,.61,.15)

  &.fat-kid-down-slide
    -webkit-transition all 300ms cubic-bezier(.2,1,.47,0)
    transition all 300ms cubic-bezier(.2,1,.47,0)


  // padding: 1% 0; /* Temp: Just spacing. */

.show-dashboard-nav .dashboard
  -webkit-transform: translateX(190px);
  transform: translateX(190px);

  transform: translate3d(190px, 0, 0);
  -webkit-transform: translate3d(190px, 0, 0);

  /*Snappy*/
  -webkit-transition all 100ms cubic-bezier(.694, .0482, .335, 1)
  transition all 100ms cubic-bezier(.694, .0482, .335, 1)

.dashboard-nav
  background paleBlue
  position absolute
  width 250px
  height 100%
  box-shadow 0 19px 38px rgba(0,0,0,0.30)

  // width: 220px;
  // height: 100%;
  position: absolute;
  top: 0;
  left: -190px;
  padding: 15px;

  // Snappy
  -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
  transition all 300ms cubic-bezier(.694, .0482, .335, 1)

.dashboard-content

  position relative
  width calc(100% - 60px)
  padding 10px
  margin 0
  left 60px


  // -webkit-transition 400ms ease all
  // transition 400ms ease all

  -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
  transition all 300ms cubic-bezier(.694, .0482, .335, 1)
.show-dashboard-nav .dashboard-content
  width calc(100% - 250px)

.ox-list
  list-style none

.ox-item
  height 50px


.testblock
  -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
  transition all 300ms cubic-bezier(.694, .0482, .335, 1)
  width 100%
  height 400px
