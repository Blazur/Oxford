@import 'app/_colors'
@import 'app/_shadows'
body {
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color color-gray-lighter
}
.dashboard
  width: 100%;
  height: 100%;
  position: relative;

  // padding: 1% 0; /* Temp: Just spacing. */

.dashboard-content
  width: 100%;
  height: 100%;
  position: absolute;
  -webkit-transform: translateX(0);
  transform: translateX(0);

  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);

  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;

  /*Snappy*/
  -webkit-transition all 400ms ease
  transition all 400ms ease
  // -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
  // transition all 300ms cubic-bezier(.694, .0482, .335, 1)

.dashboard-view

  overflow scroll
  position absolute
  width 100%
  height 100%
  padding 20px
  margin 0
  // left 0
  // -webkit-transition all 400ms ease
  // transition all 400ms ease

  @media(min-width 768px)
    // left 0
    width 100%

.has-ox-toolbar-left

  .dashboard-view
    width calc(100% - 50px)
    left 50px

    @media(min-width 768px)
      width calc(100% - 60px)
      left 60px

.has-ox-toolbar-right

  .dashboard-view
    width calc(100% - 50px)
    // right 50px

    @media(min-width 768px)
      width calc(100% - 60px)
      // right 60px

.show-toolbar-left

  .dashboard-content
    -webkit-transform: translateX(190px);
    transform: translateX(190px);
    transform: translate3d(190px, 0, 0);
    -webkit-transform: translate3d(190px, 0, 0);

  .dashboard-view
    width calc(100% - 250px)
    left 60px

    @media(min-width 768px)
      width calc(100% - 250px)

.show-toolbar-right

  .dashboard-content
    -webkit-transform: translateX(-190px);
    transform: translateX(-190px);
    transform: translate3d(-190px, 0, 0);
    -webkit-transform: translate3d(-190px, 0, 0);

  .dashboard-view
    width calc(100% - 250px)
    left 190px

    @media(min-width 768px)
      // width calc(100% - 250px)

      // left 190px

.has-ox-toolbar-right.has-ox-toolbar-left

  .dashboard-view
    width calc(100% - 100px)
    // left 50px

    @media(min-width 768px)
      width calc(100% - 120px)
      // left 60px
.show-toolbar-left.has-ox-toolbar-right

  .ox-toolbar-right
    right 0px

  .dashboard-view
    width calc(100% - 310px)

.show-toolbar-right.has-ox-toolbar-left

  .ox-toolbar-left
    left 0px

  .dashboard-view
    width calc(100% - 310px)
    left 250px

.ox-list
  list-style none

.ox-item
  height 50px


.testblock
  -webkit-transition all 1s cubic-bezier(.694, .0482, .335, 1)
  transition all 1s cubic-bezier(.694, .0482, .335, 1)
  width 100%
  height 500px
  background color-white
  shadow(2)

.ease
 transition 300ms ease all
 -webkit-transition 300ms ease all
.snappy
 -webkit-transition all 300ms cubic-bezier(.694, .0482, .335, 1)
 transition all 300ms cubic-bezier(.694, .0482, .335, 1)
.linear
