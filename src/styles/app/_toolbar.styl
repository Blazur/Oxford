
.ox-toolbar
  shadow(2)

  height 100px

  background-color color-default
  @media (min-width 768px)
    height 60px

  &.light-red
    background-color color-lightRed


  .ox-toolbar-header
    color color-gray-light

    // > div.ox-brand > div > span
    width 100%
    height 50px
    border-right 1px solid color-gray-lighter
    text-align center

    @media (min-width: 768px)
      width 250px
      height 60px
      float left

    .ox-brand
      width 100%
      font-size 30px
      font-weight bold
      padding-top 15px

  .ox-tool-box
    width 100%
    z-index 1000

    @media (min-width 768px)
      float left
      width calc(100% - 250px)

    .tools
      // Mobile Height
      min-width 10%
      height 50px
      background-color color-white


      @media (min-width: 768px)
        height 60px

      &.tools-left
        float left
        .tool
          float left
      &.tools-right
        float right
        .tool
          float right

      .tool
        margin 0
        height 50px
        min-width 50px
        font-size 16px
        padding-top 12px
        // padding-bottom 10px
        // border-right 1px solid #eee
        display block
        text-align center
        background-color #ffffff
        color color-gray-light

        @media (min-width:768px)
          height 60px
          min-width 70px
          font-size 22px
          padding-top 17px
          padding-bottom 10px
        &:hover,
        &:focus,
        &.active
          background-color inherit
          color white
          // border-right 1px inset border-lightRed
        &.light-red {
          background-color color-lightRed
          color color-white
        }
        &.teal {
          background-color color-teal
          color color-white
        }
        &.blue {
          background-color color-blue
          color color-white
        }
        &.green {
          background-color color-green
          color color-white
        }
        &.yellow {
          background-color color-yellow
          color color-white
        }
        &.orange {
          background-color color-orange
          color color-white
        }
        &.red {
          background-color color-red
          color color-white
        }
