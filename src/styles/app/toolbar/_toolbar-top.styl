.ox-toolbar

  &.ox-toolbar-top

    &.ox-toolbar-has-title
      height 100px
      @media (min-width 768px)
        height 60px
    .ox-toolbar-header
      color color-gray-light

      // > div.ox-brand > div > span
      width 100%
      height 50px
      border-right 1px solid color-gray-lighter
      text-align center

      @media (min-width: 768px)
        width 250px
        height 60px
        float left

      .ox-brand
        width 100%
        font-size 30px
        font-weight bold
        padding-top 15px

    .ox-tool-box
      width 100%
      z-index 1000

      @media (min-width 768px)
        float left
        width calc(100% - 250px)

    .tools
      // Mobile Height
      min-width 10%
      height 50px
      background-color color-white


      @media (min-width: 768px)
        height 60px

      &.tools-left
        float left
        .tool
          float left
      &.tools-right
        float right
        .tool
          float right
